{
  "name": "graphql-mesh-server",
  "version": "1.0.0",
  "description": "A GraphQL Server with Mesh Service",
  "repository": "git@github.com:douglasffilho/graphql-mesh-server.git",
  "author": "Douglas Filho <douglasf.filho@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "clean": "chmod +x clean && ./clean",
    "build": "mesh build",
    "start": "yarn start:prod",
    "start:prod": "mesh start",
    "start:dev": "mesh dev"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "17.3.0",
    "@commitlint/config-conventional": "17.3.0",
    "@types/jest": "29.2.3",
    "eslint": "8.28.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "27.1.6",
    "eslint-plugin-n": "15.5.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "git-cz": "4.9.0",
    "husky": "8.0.2",
    "jest": "29.3.1",
    "lint-staged": "13.0.4",
    "prettier": "2.8.0"
  },
  "dependencies": {
    "@graphql-mesh/cli": "0.82.22",
    "@graphql-mesh/json-schema": "0.35.37",
    "graphql": "16.6.0"
  },
  "engines": {
    "node": "16.17.0"
  }
}
