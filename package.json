{
  "name": "graphql-mesh-server",
  "version": "1.0.0",
  "description": "A GraphQL Server with Mesh Service",
  "repository": "git@github.com:douglasffilho/graphql-mesh-server.git",
  "author": "Douglas Filho <douglasf.filho@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "clean": "chmod +x clean && ./clean",
    "clean:build": "rm -rf ./.mesh",
    "build": "mesh build",
    "prebuild": "mesh build",
    "start": "mesh start",
    "dev": "mesh dev"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "17.5.1",
    "@commitlint/config-conventional": "17.4.4",
    "@types/jest": "29.5.0",
    "eslint": "8.37.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-n": "15.7.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "git-cz": "4.9.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "lint-staged": "13.2.0",
    "prettier": "2.8.7"
  },
  "dependencies": {
    "@envelop/core": "3.0.6",
    "@graphql-mesh/cli": "0.82.31",
    "@graphql-mesh/openapi": "0.36.0",
    "graphql": "16.6.0"
  }
}
